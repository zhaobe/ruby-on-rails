<% if @books.blank? %>
<p>There are no books in the system.</p>
<% else %>
<p>These are the current books in the system</p>

<ul id = "books">
   <% @books.each do |c| %>
   <li><%= link_to c.title, {:action => 'show', :id => c.id} -%>
     <b><%= link_to 'Edit', {:action => 'edit', :id => c.id} %></b>
     <b><%= link_to 'Delete', {:action => 'delete', :id => c.id}, :confirm => "Are you sure you want to delete this book?" %></b>
   </li>
   <% end %>
</ul>

<% end %>
<p><%= link_to "Add new Book", {:action => 'new' }%></p>